{
  "manifest_version": 3,
  "name": "Medium Stats Collector (GraphQL)",
  "version": "1.0",
  "description": "Collect Medium stats via internal GraphQL API (claps, views, reads, presentations, followers/subscribers).",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://medium.com/*",
    "https://*.medium.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/*stats*",
        "https://*.medium.com/*stats*",
        "https://medium.com/p/*",
        "https://*.medium.com/p/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
